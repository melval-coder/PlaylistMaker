<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout style="@style/linear_style">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            app:title="@string/settings"
            style="@style/toolbar_settings_style" />
    </LinearLayout>

    <LinearLayout style="@style/linear_style"
        android:layout_marginTop="8dp">

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/dark_theme"
            style="@style/settingsButton" />

        <Switch
            android:id="@+id/off"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="UseSwitchCompatOrMaterialXml" />
    </LinearLayout>

    <Button
        android:id="@+id/share"
        android:text="@string/share_the_app"
        app:icon="@drawable/icon_share"
        style="@style/settingsButton" />

    <Button
        android:id="@+id/group"
        android:text="@string/write_to_support"
        app:icon="@drawable/icon_group"
        style="@style/settingsButton" />

    <Button
        android:id="@+id/agreement"
        android:text="@string/user_agreement"
        app:icon="@drawable/icon_agreement"
        style="@style/settingsButton" />

</LinearLayout>