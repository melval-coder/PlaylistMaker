<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="big_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">#ffffff</item>
        <item name="android:fontFamily">@font/display_medium</item>
        <item name="android:textColor">#1A1B22</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">10dp</item>
        <item name="iconTint">@color/black</item>
        <item name="cornerRadius">20dp</item>

    </style>

    <style name="settings_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:fontFamily">@font/display_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="iconGravity">end</item>
        <item name="iconTint">@color/icon_color</item>
    </style>
</resources>